{% extends skin~'/base.html.twig' %}

{% block meta %}{% endblock %}

{% block title %}Contact : {{ texte }}{% endblock %}

{% block stylesheets %}
    <style>
        
    </style>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}
    <section class="section_padding" style="margin-top:50px;">
        {% for label, messages in app.flashes(['error','notice']) %}
            {% for message in messages %}
                <div class="flash-{{label}}">{{ message|trans }}</div>
            {% endfor %}
        {% endfor %}
        <div class="container">
            <div class="section_heading text-center">
                <h2>Formulaire de Contact</h2>
                {#<p></p>#}
                {% for label, messages in app.flashes(['error','notice']) %}
                    {% for message in messages %}
                        <div class="flash-{{label}}">{{ message|trans }}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            {{ form_start(form, { 'attr': { 'class': 'form-note'}}) }}
            {{ form_errors(form) }}
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_widget(form.nom, {'attr': {'class':'form-control', 'placeholder':'widget.contact.nom'}}) }}
                    </div>

                    <div class="form-group col-md-6">
                        {{ form_widget(form.email, {'attr': {'class':'form-control', 'placeholder':'widget.contact.email'}}) }}
                    </div>		

                    <div class="form-group col-md-12">
                        {{ form_widget(form.sujet, {'attr': {'class':'form-control'}}) }}
                    </div>

                    <div class="form-group col-md-12">
                        {{ form_widget(form.message, {'attr': {'class':'form-control', 'placeholder':'widget.contact.message'}}) }}
                    </div>

                    <div class="col-md-12 text-center">
                        {{ form_widget(form.validate, {'attr': {'class':'btn discover_btn'}}) }}
                    </div>

                </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

