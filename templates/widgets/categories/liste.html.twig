{% extends skin~'/base.html.twig' %}

{% block meta %}{% endblock %}

{% block title %}Catégorie : {{ categorie.nom }}{% endblock %}

{% block stylesheets %}
    <style>
        h1 { margin-top: 1.5rem!important; font-size: 1.25rem; font-weight: bolder; }
        h2 { margin-top: 15px; font-size: 14px; border-bottom: 1px dashed graytext; }
        
        label.date { float:right; }
        div.intro { font-style: italic; }
    </style>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}
    <h1>Liste des articles de cette catégorie</h1>
    {# Listing #}
    {% if categorie.articles|length > 0 %}
        <h2>{{ categorie.articles|length }} articles trouvés</h2>
        <ol>
            {% for a in categorie.articles %}
            <li>
                {% include skin~'/_listes/article.html.twig' with {'a': a} %}
            </li>
            {% endfor %}
        </ol>
    {% else %}
        <h2>Aucun article trouvé pour cette catégorie</h2>
    {% endif %}
{% endblock %}
